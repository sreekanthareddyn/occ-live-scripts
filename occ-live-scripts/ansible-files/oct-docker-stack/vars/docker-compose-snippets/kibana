kibana:
  image: xgox/kibana:1
  deploy:
    mode: replicated
    replicas: 1
    restart_policy:
      condition: on-failure
    placement:
      constraints: [node.labels.ELK == true]
  volumes:
    - home/kibana/config/:/usr/share/kibana/config:ro
  ports:
    - "5601:5601"
  networks:
    - elk
  depends_on:
    - elasticsearch
